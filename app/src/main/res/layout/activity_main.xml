<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/previewImageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxHeight="400dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="@string/camera_preview_description"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/serverStatusText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/server_status"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/previewImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/serverUrlText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/server_url"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:textIsSelectable="true"
        app:layout_constraintTop_toBottomOf="@+id/serverStatusText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/cameraSelectionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/camera_selection"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/serverUrlText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/endpointsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/endpoints_title"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/cameraSelectionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/endpointsText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/endpoint_snapshot"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        app:layout_constraintTop_toBottomOf="@+id/endpointsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/resolutionLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/resolution_label"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/endpointsText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/resolutionSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@+id/resolutionLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/cameraOrientationLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/camera_orientation_label"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/resolutionSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/cameraOrientationSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@+id/cameraOrientationLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/rotationLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/rotation_label"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/cameraOrientationSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/rotationSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@+id/rotationLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/osdOverlaysLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/osd_overlays_label"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/rotationSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/showDateTimeCheckBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/show_date_time"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@+id/osdOverlaysLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/showBatteryCheckBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/show_battery"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@+id/showDateTimeCheckBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/showResolutionCheckBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/show_resolution"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@+id/showBatteryCheckBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/showFpsCheckBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/show_fps"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@+id/showResolutionCheckBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/fpsSettingsLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/fps_settings_label"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/showFpsCheckBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/currentFpsLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/current_fps_label"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/fpsSettingsLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/currentFpsText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0.0 fps"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/currentFpsLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/mjpegFpsLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/mjpeg_target_fps_label"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/currentFpsText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/mjpegFpsSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@+id/mjpegFpsLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/autoStartCheckBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/auto_start_server"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@+id/mjpegFpsSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/activeConnectionsLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/active_connections_label"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/autoStartCheckBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/activeConnectionsText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/connections_count"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/activeConnectionsLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/maxConnectionsLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/max_connections_label"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/activeConnectionsText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/maxConnectionsSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@+id/maxConnectionsLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/restartNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/restart_required"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/maxConnectionsSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/switchCameraButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/switch_camera"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/restartNote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/flashlightButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/flashlight_toggle"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/switchCameraButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/startStopButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/start_server"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/flashlightButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/versionInfoText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/version_info_placeholder"
        android:textSize="11sp"
        android:textStyle="italic"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/startStopButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
