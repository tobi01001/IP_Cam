<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/launcher_background"
    tools:context=".MainActivity">

    <!-- Main Content ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- Status Bar Section - Always visible at top -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardElevation="4dp"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Device Name and Server Status Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_launcher_foreground"
                            android:contentDescription="@string/app_name"
                            android:layout_marginEnd="12dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/deviceNameDisplay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/app_name"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                />

                            <TextView
                                android:id="@+id/serverStatusText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/server_status"
                                android:textSize="14sp"
                                android:textColor="#757575"/>
                        </LinearLayout>

                        <!-- Quick Settings Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/quickSettingsButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:insetLeft="0dp"
                            android:insetRight="0dp"
                            app:icon="@android:drawable/ic_menu_preferences"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                            android:contentDescription="Device Settings"/>
                    </LinearLayout>

                    <!-- Server URL -->
                    <TextView
                        android:id="@+id/serverUrlText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/server_url"
                        android:textSize="12sp"
                        android:textIsSelectable="true"
                        android:fontFamily="monospace"
                        android:layout_marginTop="8dp"
                        android:textColor="#757575"/>

                    <!-- Main Control Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/startStopButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/start_server"
                            android:layout_marginEnd="4dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/switchCameraButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/switch_camera"
                            android:layout_marginEnd="4dp"
                            android:layout_marginStart="4dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/flashlightButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/flashlight_toggle"
                            android:layout_marginStart="4dp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                    </LinearLayout>

                    <!-- Client Information -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/client_info_label"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/mjpegClientsText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/mjpeg_clients"
                            android:textSize="12sp"
                            android:textColor="#757575"/>

                        <TextView
                            android:id="@+id/rtspClientsText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/rtsp_clients"
                            android:textSize="12sp"
                            android:textColor="#757575"/>

                        <TextView
                            android:id="@+id/totalClientsText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/total_clients"
                            android:textSize="12sp"
                            android:textColor="#757575"/>
                    </LinearLayout>

                    <!-- Device Metrics -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/device_metrics_label"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/cpuUsageText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/cpu_usage"
                            android:textSize="12sp"
                            android:textColor="#757575"/>

                        <TextView
                            android:id="@+id/bandwidthUsageText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/bandwidth_usage"
                            android:textSize="12sp"
                            android:textColor="#757575"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Camera Preview Section - Collapsible -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Section Header -->
                    <LinearLayout
                        android:id="@+id/previewSectionHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Camera Preview"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />

                        <ImageView
                            android:id="@+id/previewExpandIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/arrow_down_float"
                            android:contentDescription="Expand/Collapse"/>
                    </LinearLayout>

                    <!-- Preview Content -->
                    <LinearLayout
                        android:id="@+id/previewContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Use preview to position camera. Collapse to save resources."
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:layout_marginBottom="8dp"/>

                        <ImageView
                            android:id="@+id/previewImageView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="300dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:contentDescription="@string/camera_preview_description"/>

                        <TextView
                            android:id="@+id/cameraSelectionText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/camera_selection"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:textColor="#757575"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Video Settings Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Section Header -->
                    <LinearLayout
                        android:id="@+id/videoSectionHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Video Settings"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />

                        <ImageView
                            android:id="@+id/videoExpandIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/arrow_down_float"
                            android:contentDescription="Expand/Collapse"/>
                    </LinearLayout>

                    <!-- Video Settings Content -->
                    <LinearLayout
                        android:id="@+id/videoContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="gone">

                        <!-- Resolution -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/resolution_label"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            />

                        <Spinner
                            android:id="@+id/resolutionSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:layout_marginBottom="12dp"/>

                        <!-- Camera Orientation -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/camera_orientation_label"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            />

                        <Spinner
                            android:id="@+id/cameraOrientationSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:layout_marginBottom="12dp"/>

                        <!-- Rotation -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/rotation_label"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            />

                        <Spinner
                            android:id="@+id/rotationSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:layout_marginBottom="12dp"/>

                        <!-- OSD Overlays -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/osd_overlays_label"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"
                            />

                        <CheckBox
                            android:id="@+id/showDateTimeCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/show_date_time"
                            android:minHeight="48dp"/>

                        <CheckBox
                            android:id="@+id/showBatteryCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/show_battery"
                            android:minHeight="48dp"/>

                        <CheckBox
                            android:id="@+id/showResolutionCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/show_resolution"
                            android:minHeight="48dp"/>

                        <CheckBox
                            android:id="@+id/showFpsCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/show_fps"
                            android:minHeight="48dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Server Settings Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Section Header -->
                    <LinearLayout
                        android:id="@+id/serverSectionHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Server Settings"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />

                        <ImageView
                            android:id="@+id/serverExpandIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/arrow_down_float"
                            android:contentDescription="Expand/Collapse"/>
                    </LinearLayout>

                    <!-- Server Settings Content -->
                    <LinearLayout
                        android:id="@+id/serverContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="gone">

                        <!-- Device Name -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/device_name_label"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <EditText
                                android:id="@+id/deviceNameEditText"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="@string/device_name_hint"
                                android:inputType="text"
                                android:minHeight="48dp"
                                android:layout_marginEnd="8dp"
                                android:importantForAutofill="no"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/saveDeviceNameButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/save_device_name"/>
                        </LinearLayout>

                        <!-- FPS Settings -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fps_settings_label"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/currentFpsText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Current: 0.0 fps"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mjpeg_target_fps_label"
                            android:textSize="13sp"
                            />

                        <Spinner
                            android:id="@+id/mjpegFpsSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:layout_marginBottom="12dp"/>

                        <!-- Connection Settings -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/active_connections_label"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:id="@+id/activeConnectionsText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/connections_count"
                            android:textSize="13sp"
                            android:textColor="#757575"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/max_connections_label"
                            android:textSize="13sp"
                            />

                        <Spinner
                            android:id="@+id/maxConnectionsSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/restart_required"
                            android:textSize="11sp"
                            android:textStyle="italic"
                            android:textColor="#757575"
                            android:layout_marginBottom="12dp"/>

                        <!-- Auto-start -->
                        <CheckBox
                            android:id="@+id/autoStartCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/auto_start_server"
                            android:minHeight="48dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- API Endpoints Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Section Header -->
                    <LinearLayout
                        android:id="@+id/apiSectionHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="API Endpoints"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />

                        <ImageView
                            android:id="@+id/apiExpandIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/arrow_down_float"
                            android:contentDescription="Expand/Collapse"/>
                    </LinearLayout>

                    <!-- API Content -->
                    <LinearLayout
                        android:id="@+id/apiContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/endpointsText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="11sp"
                            android:fontFamily="monospace"
                            android:textColor="#757575"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Device Owner Status Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Section Header -->
                    <LinearLayout
                        android:id="@+id/deviceOwnerSectionHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Device Management Status"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <ImageView
                            android:id="@+id/deviceOwnerExpandIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/arrow_down_float"
                            android:contentDescription="Expand/Collapse"/>
                    </LinearLayout>

                    <!-- Device Owner Content -->
                    <LinearLayout
                        android:id="@+id/deviceOwnerContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Check Device Owner status and prerequisites for silent updates."
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:id="@+id/deviceOwnerStatusText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:visibility="gone"
                            android:layout_marginBottom="12dp"
                            android:padding="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/checkDeviceOwnerButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Check Device Owner Status"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Software Update Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Section Header -->
                    <LinearLayout
                        android:id="@+id/softwareUpdateSectionHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Software Update"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <ImageView
                            android:id="@+id/softwareUpdateExpandIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/arrow_down_float"
                            android:contentDescription="Expand/Collapse"/>
                    </LinearLayout>

                    <!-- Software Update Content -->
                    <LinearLayout
                        android:id="@+id/softwareUpdateContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Check for and install app updates from GitHub Releases."
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:id="@+id/updateStatusText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorPrimary"
                            android:visibility="gone"
                            android:layout_marginBottom="12dp"
                            android:padding="8dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/checkUpdateButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Check for Update"
                                android:layout_marginEnd="4dp"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/installUpdateButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Install Update"
                                android:layout_marginStart="4dp"
                                android:visibility="gone"
                                style="@style/Widget.MaterialComponents.Button"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Footer with version info -->
            <TextView
                android:id="@+id/versionInfoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/version_info_placeholder"
                android:textSize="11sp"
                android:textStyle="italic"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:padding="16dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
